      "post": {
        "description": "Calcular precio teórico de un bono",
        "tags": [ "Bonds" ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["ticker", "settlement_date", "yield_rate"],
                "properties": {
                  "ticker": { "type": "string", "example": "AL30" },
                  "settlement_date": { "type": "string", "format": "date", "example": "2025-10-15" },
                  "yield_rate": { "type": "number", "format": "float", "example": 15.5 }
                }
              }
            }
          }
        },
        "responses": {
